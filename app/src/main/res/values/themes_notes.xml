<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NotesApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/notes_app_primary_color</item>
        <item name="colorPrimaryVariant">@color/notes_app_primary_color</item>
        <item name="android:statusBarColor">@color/notes_app_primary_color</item>
        <item name="android:colorAccent">@color/notes_app_primary_color</item>
        <item name="colorAccent">@color/notes_app_primary_color</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">@color/notes_app_primary_color</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="PrimaryText.H1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PrimaryText.H2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EditText">
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

</resources>