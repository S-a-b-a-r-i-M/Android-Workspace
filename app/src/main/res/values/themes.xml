    <style name="Theme.MyApplicationWithMaterial" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.FirstApplication2" parent="Theme.AppCompat.DayNight">
        <item name="android:colorPrimary">@color/brown_orange</item>
        <item name="android:colorSecondary">@color/brown_orange</item>
        <item name="android:buttonStyle">@style/CustomButton2</item>
    </style>

    <style name="CustomButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/brown_orange</item>
    </style>

    <style name="CustomButton2">>
        <item name="android:background">@color/cambridge_blue</item>
    </style>

<!--  Splash screen   -->
    <style name="Theme.MySplashScreen" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@color/cardview_dark_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/iron_man</item>
        <item name="postSplashScreenTheme">@style/Theme.ApplicationWithoutActionBar</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="transparentBackgroundBtn">
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="MyTextAppearance">
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="MediumButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CustomText">
        <item name="android:textColor">@color/cambridge_blue</item>
    </style>

    <style name="Theme.CustomToolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Color -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/lavender</item>
        <!-- Secondary Color -->
        <item name="colorSecondary">@color/cambridge_blue</item>
        <item name="colorSecondaryVariant">@color/cambridge_blue</item>
        <item name="colorOnSecondary">@color/cambridge_blue</item>
        <!-- Status Bar Color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here -->
    </style>

    <style name="Widget.Custom.TextInputLayout.OutlinedBox" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/stroke_color</item>
        <item name="hintTextColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_medium</item>
        <item name="counterEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Widget.Custom.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/stroke_color</item>
        <item name="hintTextColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_medium</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.ApplicationWithoutActionBar"
        parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

