<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:paddingHorizontal="10dp"
    tools:context=".MainActivity2">

<!-- SENDING DATA TO CALLING ACTIVITY   -->
    <TextView
        android:id="@+id/returnDataTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:padding="10dp"
        android:text="Data Return Example"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/returnDataTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp"
        android:ems="10"
        android:hint="Enter User Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/returnDataTitle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/returnDataTitle" />

    <Button
        android:id="@+id/saveNoteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="25dp"
        android:text="Return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toEndOf="@+id/returnDataTV"
        app:layout_constraintTop_toBottomOf="@+id/returnDataTitle" />

<!-- ALERT DIALOG   -->
    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/returnDataTV" />

    <TextView
        android:id="@+id/alertDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="Alert Dialog Example"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/alertDialogBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator1" />

    <Button
        android:id="@+id/alertDialogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertDialogTitle"
        app:layout_constraintEnd_toStartOf="@+id/alertDialogCustomBtn" />

    <Button
        android:id="@+id/alertDialogCustomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alertDialogBtn"
        app:layout_constraintTop_toBottomOf="@+id/alertDialogTitle" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertDialogBtn" />

<!-- IMPLICIT INTENT  -->
    <TextView
        android:id="@+id/intentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="Implicit Intent Example"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intentTitle">

        <Button
            android:id="@+id/openWebBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:text="Open Web" />

        <Button
            android:id="@+id/openMailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Mail" />

    </LinearLayout>

    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

<!-- CUSTOM RADIO BUTTONS -->
    <RadioGroup
        android:id="@+id/foodRGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator3"
        app:layout_constraintEnd_toStartOf="@+id/domainRGroup">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/biriyaniRB"
            style="@style/Widget.Material3.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="biriyani"
            android:textSize="14sp"
            android:button="@null"
            android:background="@null"
            android:drawableStart="@drawable/radio_button_bg"
            android:drawablePadding="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/pizzaRB"
            style="@style/Widget.Material3.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="pizza"
            android:textSize="14sp"
            android:button="@null"
            android:background="@null"
            android:drawableStart="@drawable/radio_button_bg"
            android:drawablePadding="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/vegMealsRB"
            style="@style/Widget.Material3.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Veg Meals"
            android:textSize="14sp"
            android:button="@null"
            android:background="@null"
            android:drawableStart="@drawable/radio_button_bg"
            android:drawablePadding="8dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/domainRGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foodRGroup"
        app:layout_constraintTop_toBottomOf="@+id/separator3">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/govenmentRB"
            style="@style/Widget.Material3.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="govenment"
            android:textSize="14sp"
            android:button="@null"
            android:background="@null"
            android:drawableStart="@drawable/radio_button_bg"
            android:drawablePadding="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/itRB"
            style="@style/Widget.Material3.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="IT"
            android:textSize="14sp"
            android:button="@null"
            android:background="@null"
            android:drawableStart="@drawable/radio_button_bg"
            android:drawablePadding="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/privateRB"
            style="@style/Widget.Material3.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="private"
            android:textSize="14sp"
            android:button="@null"
            android:background="@null"
            android:drawableStart="@drawable/radio_button_bg"
            android:drawablePadding="8dp" />

    </RadioGroup>

    <View
        android:id="@+id/separator4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodRGroup" />


</androidx.constraintlayout.widget.ConstraintLayout>