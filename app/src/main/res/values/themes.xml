<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--
    Good themes -> Theme.Material3.DayNight.NoActionBar

-->
    <style name="Theme.FirstApplication" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

<!--  Splash screen   -->
    <style name="Theme.MySplashScreen" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@color/cardview_dark_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/iron_man</item>
        <item name="postSplashScreenTheme">@style/Theme.FirstApplication</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="transparentBackgroundBtn">
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="MyTextAppearance" >
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="MediumButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>